<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApp.Pages.NewsDetailPage"
             Title="" NavigationPage.HasNavigationBar="False">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="item 1" Priority="0" Order="Secondary"/>
        <ToolbarItem Text="item 2" Priority="1" Order="Secondary"/>
        <ToolbarItem Text="item 3" Priority="2" Order="Secondary"/>
        <ToolbarItem IconImageSource="share.svg" Priority="3" Order="Primary" x:Name="TbShare" Clicked="TbShare_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <Grid RowDefinitions="Auto, Auto, Auto">
        <Image Grid.Row="0" x:Name="ImgNews" HeightRequest="300" Margin="5" Aspect="Fill"/>
        <Label Grid.Row="1" x:Name="LblTitle" Margin="10" FontSize="Title" FontAttributes="Bold" TextDecorations="Underline"/>
        <Label Grid.Row="2" x:Name="LblContent" Margin="10" FontSize="Body"/>
    </Grid>
</ContentPage>